# ---------------------------------------------------------
# projects/app-lain/env.example
# Environment variables untuk App Lain
# ---------------------------------------------------------

# App Configuration
APP_NAME=app-lain
APP_VERSION=1.0.0
APP_ENV=production

# PHP Configuration
PHP_VERSION=8.2
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=32M
PHP_POST_MAX_SIZE=32M
PHP_MAX_EXECUTION_TIME=60

# MySQL Configuration
MYSQL_VERSION=8.0
MYSQL_ROOT_PASSWORD=supersecretroot
MYSQL_DATABASE=app_lain
MYSQL_USER=app_lain
MYSQL_PASSWORD=supersecretuser
MYSQL_PORT=3309

# Redis Configuration (Shared)
REDIS_HOST=shared-redis
REDIS_PORT=6379

# Nginx Configuration (Shared)
NGINX_HOST=shared-nginx
NGINX_PORT=80

# Domain Configuration
SERVER_NAME=app-lain.localhost
SERVER_EMAIL=admin@app-lain.localhost

# Timezone
TZ=Asia/Jakarta
