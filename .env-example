# ---------------------------------------------------------
# .env.example
# Salin ke .env dan sesuaikan kebutuhanmu
# ---------------------------------------------------------

# Domain & kontak Let's Encrypt
SERVER_NAME=example.com
SERVER_EMAIL=admin@example.com

# Port expose host -> container
HTTP_PORT=80
HTTPS_PORT=443
MYSQL_PORT=3306
REDIS_PORT=6379

# Zona waktu dan PHP limits
TZ=Asia/Jakarta
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# MySQL credentials
MYSQL_ROOT_PASSWORD=supersecretroot
MYSQL_DATABASE=app_bosowa
MYSQL_USER=app_bosowa
MYSQL_PASSWORD=supersecretuser
